package it.unipd.mtss;
import static org.junit.Assert.*;
import org.junit.Test;

public class IntegerToRomanTest() 
{
    @Test
    public void ShouldBeI()
    {
       String r=convert(1)
       String t="I";
       assertSame(t,r);
    }
    @Test
    public void ShouldBeV()
    {
       String r=convert(5)
       String t="V";
       assertSame(t,r);
    }
    @Test
    public void ShouldBeX()
    {
       String r=convert(10)
       String t="X";
       assertSame(t,r);
    }
    @Test
    public void ShouldBeC()
    {
       String r=convert(100)
       String t="C";
       assertSame(t,r);
    }
    @Test
    public void ShouldBeM()
    {
       String r=convert(1000)
       String t="M";
       assertSame(t,r);
    }
}